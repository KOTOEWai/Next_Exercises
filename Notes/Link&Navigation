import { useRouter } from 'next/navigation';
function MyComponent() {
  const router = useRouter();
  const handleRefresh = () => {
    // á€œá€€á€ºá€›á€¾á€­ Page á€€á€­á€¯ á€•á€¼á€”á€ºá€œá€Šá€ºá€á€½á€„á€ºá€¸á€á€¼á€„á€ºá€¸
    router.refresh(); 
  };
  return <button onClick={handleRefresh}>Refresh Page</button>;
}














á„á‹ ğŸ§­ Route Parameters á€”á€¾á€„á€·á€º Query Parameters á€›á€šá€°á€á€¼á€„á€ºá€¸Next.js Application á€™á€¾á€¬ Dynamic Routes (á€¥á€•á€™á€¬- /posts/[id]) á€€á€­á€¯ á€¡á€á€¯á€¶á€¸á€•á€¼á€¯á€á€²á€·á€¡á€á€«
